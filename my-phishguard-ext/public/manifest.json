{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "0.1.0",
  "description": "A real-time phishing link detector.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/*" ],
      "matches": [ "<all_urls>", "file://*/*" ]
    }
  ]
}